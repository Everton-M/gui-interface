QWidget {
    background-color: #f0f0f0;
    font-family: Arial;
    font-size: 14px;
}

QLineEdit {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 6px;
    background-color: white;
}

QPushButton {
    background-color: #007ACC;
    color: white;
    border-radius: 5px;
    padding: 8px;
}

QPushButton:hover {
    background-color: #005999;
}
